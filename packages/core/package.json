{
	"name": "@terminallyonline/cord",
	"version": "0.1.1",
	"description": "A templating language for creating structured, type-safe input forms",
	"license": "MIT",
	"homepage": "https://github.com/Terminally-Online/cord#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Terminally-Online/cord.git"
	},
	"bugs": {
		"url": "https://github.com/Terminally-Online/cord/issues"
	},
	"type": "module",
	"scripts": {
		"build": "rm -rf dist && pnpm build:esm && pnpm build:cjs && pnpm build:types",
		"build:esm": "tsc --project tsconfig.json",
		"build:cjs": "esbuild 'src/**/*.ts' 'src/**/*.tsx' --outdir=dist/cjs --format=cjs --platform=node --target=node18 --outbase=src --bundle",
		"build:types": "tsc --project tsconfig.json --emitDeclarationOnly --declarationDir dist/types",
		"dev": "tsc --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"devDependencies": {
		"typescript": "^5.3.3",
		"vitest": "^2.1.5",
		"esbuild": "^0.20.0"
	},
	"files": [
		"dist",
		"README.md"
	],
	"exports": {
		".": {
			"types": "./dist/types/index.d.ts",
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js",
			"default": "./dist/cjs/index.js"
		}
	},
	"typesVersions": {
		"*": {
			"*": [
				"./dist/types/*"
			]
		}
	},
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/types/index.d.ts",
	"sideEffects": false,
	"publishConfig": {
		"access": "public"
	},
	"keywords": [
		"templating",
		"forms",
		"validation",
		"ethereum",
		"blockchain",
		"typescript"
	]
}
