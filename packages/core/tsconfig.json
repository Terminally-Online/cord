{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"moduleResolution": "bundler",
		"module": "ESNext",
		"outDir": "./dist/esm",
		"rootDir": "./src",
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"jsx": "react-jsx",
		"composite": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"removeComments": true,
		"stripInternal": true
	},
	"include": ["src"]
}
